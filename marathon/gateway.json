{
    "id": "gateway",
    "container": {
	"type": "DOCKER",
	"docker": {
	    "image": "amalgam8/a8-sidecar:0.1-alpine",
	    "network": "BRIDGE",
	    "portMappings": [
		{
		    "containerPort": 6379,
		    "hostPort": 32000,
		    "protocol" : "tcp"
		}
	    ]
	}
    },
    "cmd" : "a8sidecar --register=false --supervise=false",
    "env": {
		"SERVICE" : "gateway",
        "SERVICE_VERSION" : "v1",
		"TENANT_TOKEN":"12345",
		"TENANT_ID": "local",
        "LOGSTASH_SERVER" : "'__REPLACEME__:8092'",
		"CONTROLLER_URL":"http://__REPLACEME__:31200",
		"CONTROLLER_POLL" : "15s",
        "KAFKA_BROKER" : "__REPLACEME__:9092"
    },
    "instances": 1,
    "cpus": 0.1,
    "mem": 256
}
